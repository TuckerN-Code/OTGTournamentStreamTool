<Window x:Class="OTGStreamToolUserSide.Pages.SetAuthCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OTGStreamToolUserSide.Pages"
        mc:Ignorable="d"
        Title="SetAuthCode" MinWidth="550" MinHeight="150" MaxHeight="150" MaxWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Paste in your Smash.GG Developer Token" TextWrapping="Wrap" TextAlignment="Center"/>
        <TextBox x:Name="AuthTextBox" Style="{StaticResource SlugAuthInput}"/>
        <Button x:Name="Update" Content="Update" Click="Update_Click" Style="{StaticResource ActionButtons}" Grid.Row="1"/>
    </Grid>
</Window>
